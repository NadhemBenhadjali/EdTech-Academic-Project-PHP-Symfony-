{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
    <div class="details-page-wrapper">
        <div class="details-container course-details-glass">
            <div style="display:flex; align-items:center; gap:1rem;">
                {{ include('_partials/back_button.html.twig', { parent_route: 'public_course_index', fallback_route: 'public_course_index', label: 'Retour' }) }}
                <h1 class="details-title">{{ course.title }}</h1>
            </div>
            <div class="course-meta">
                <span class="course-category">{{ course.category ? course.category.name : 'Uncategorized' }}</span>
                <span class="price-badge">{{ course.price|number_format(2, '.', ' ') }} €</span>
            </div>

            <div class="course-section">
                <h2>Chapters</h2>
                <ul class="section-list">
                    {% for chapter in course.chapters %}
                        <li>{{ chapter.title }}</li>
                    {% else %}
                        <li class="empty">No chapters yet.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="course-section">
                <h2>Attachments</h2>
                <ul class="section-list">
                    {% for attachment in course.attachments %}
                        <li>
                            <a href="{{ attachment.url }}" target="_blank" class="attachment-link">
                                {{ attachment.name ?: attachment.url }}
                            </a>
                        </li>
                    {% else %}
                        <li class="empty">No attachments yet.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="course-section">
                <h2>Quizzes</h2>
                <ul class="section-list">
                    {% for quiz in course.quizzes %}
                        <li>
                            {{ quiz.title }}
                            {% if quiz.url %}
                                – <a href="{{ quiz.url }}" target="_blank" class="btn-quiz">Open quiz</a>
                            {% else %}
                                – <span class="quiz-unavailable">(quiz link not available yet)</span>
                            {% endif %}
                        </li>
                    {% else %}
                        <li class="empty">No quizzes yet.</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="enroll-section">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% if is_enrolled is defined and is_enrolled %}
                        <p class="enrolled-msg">You are already enrolled in this course.</p>
                    {% else %}
                        <a class="btn-enroll" href="{{ path('public_course_enroll', {'id': course.id}) }}">Enroll Now</a>
                    {% endif %}
                {% else %}
                    <a class="btn-login" href="{{ path('app_login') }}">Log in to enroll</a>
                {% endif %}
            </div>

            {# back-link replaced by shared back_button partial above #}
        </div>
    </div>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700;800&display=swap');
        :root {
            --details-bg-color: #111827;
            --details-gradient-start: #4f46e5;
            --details-gradient-end: #ec4899;
            --glass-bg: linear-gradient(145deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.01) 100%);
            --glass-border: rgba(255, 255, 255, 0.15);
            --text-light: #e5e7eb;
            --text-muted: #9ca3af;
            --accent-gradient: linear-gradient(90deg, var(--details-gradient-start) 0%, var(--details-gradient-end) 100%);
            --shadow-color: rgba(0, 0, 0, 0.5);
            --transition-curve: cubic-bezier(0.25, 0.8, 0.25, 1);
        }
        .details-page-wrapper {
            font-family: 'Inter', sans-serif;
            background-color: var(--details-bg-color);
            color: var(--text-light);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem 1rem;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }
        .details-page-wrapper::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 800px;
            height: 800px;
            background-image: radial-gradient(circle, var(--details-gradient-start) 0%, transparent 50%),
                              radial-gradient(circle, var(--details-gradient-end) 0%, transparent 50%);
            background-position: -200px -200px, 200px 200px;
            background-repeat: no-repeat;
            transform: translate(-50%, -50%);
            filter: blur(150px) saturate(1.5);
            opacity: 0.3;
            animation: background-pan 20s linear infinite;
        }
        @keyframes background-pan {
            0% { background-position: -200px -200px, 200px 200px; }
            25% { background-position: 200px -200px, -200px 200px; }
            50% { background-position: 200px 200px, -200px -200px; }
            75% { background-position: -200px 200px, 200px -200px; }
            100% { background-position: -200px -200px, 200px 200px; }
        }
        .details-container.course-details-glass {
            width: 100%;
            max-width: 700px;
            margin: 2rem auto;
            background: var(--glass-bg);
            backdrop-filter: blur(30px) saturate(180%);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 2.5rem 2rem 2rem 2rem;
            box-shadow: 0 32px 80px var(--shadow-color);
            animation: details-entry 0.8s var(--transition-curve) backwards;
            position: relative;
            z-index: 1;
        }
        @keyframes details-entry {
            from { opacity: 0; transform: translateY(40px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }
        .details-title {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 2.2rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 1.2rem;
            background: linear-gradient(90deg, #d1d5db 0%, #f9fafb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }
        .course-meta {
            display: flex;
            justify-content: center;
            gap: 1.2rem;
            margin-bottom: 1.5rem;
        }
        .course-category {
            background: var(--accent-gradient);
            color: #fff;
            font-size: 0.98rem;
            font-weight: 600;
            border-radius: 7px;
            padding: 4px 15px;
            letter-spacing: 0.01em;
            box-shadow: 0 2px 8px rgba(79, 70, 229, 0.10);
        }
        .price-badge {
            display: inline-block;
            background: var(--accent-gradient);
            color: #fff;
            font-weight: 700;
            border-radius: 8px;
            padding: 4px 16px;
            font-size: 1.08rem;
            box-shadow: 0 2px 8px rgba(79, 70, 229, 0.10);
            letter-spacing: 0.01em;
        }
        .course-section {
            margin-top: 2.2rem;
        }
        .course-section h2 {
            font-size: 1.18rem;
            color: #fff;
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-weight: 700;
            margin-bottom: 0.7rem;
            letter-spacing: 0.01em;
        }
        .section-list {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }
        .section-list li {
            background: rgba(255,255,255,0.04);
            border-radius: 8px;
            margin-bottom: 8px;
            padding: 10px 16px;
            font-size: 1rem;
            color: var(--text-light);
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            transition: background 0.2s;
        }
        .section-list li.empty {
            font-style: italic;
            color: var(--text-muted);
            background: none;
            box-shadow: none;
        }
        .section-list li:hover {
            background: rgba(79, 70, 229, 0.10);
        }
        .attachment-link {
            color: #a5b4fc;
            text-decoration: underline;
            font-weight: 500;
            transition: color 0.2s;
        }
        .attachment-link:hover {
            color: #ec4899;
        }
        .btn-enroll, .btn-login, .btn-quiz {
            display: inline-flex;
            align-items: center;
            gap: 0.4em;
            padding: 11px 28px;
            border-radius: 12px;
            background: var(--accent-gradient);
            color: #fff;
            font-weight: 700;
            font-size: 1.08rem;
            text-decoration: none;
            border: none;
            box-shadow: 0 4px 16px rgba(76, 29, 149, 0.15);
            margin-top: 12px;
            transition: all 0.3s var(--transition-curve);
            outline: none;
        }
        .btn-enroll:hover, .btn-login:hover, .btn-quiz:hover {
            background-position: right center;
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 8px 25px rgba(76, 29, 149, 0.18);
        }
        .btn-enroll:focus, .btn-login:focus, .btn-quiz:focus {
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.25);
        }
        .quiz-unavailable {
            color: var(--text-muted);
            font-style: italic;
        }
        .enroll-section {
            text-align: center;
            margin-top: 2.5rem;
        }
        .enrolled-msg {
            font-weight: 700;
            color: #a5b4fc;
        }
        @media (max-width: 700px) {
            .details-container.course-details-glass {
                padding: 1.2rem 0.5rem 1.2rem 0.5rem;
            }
            .details-title {
                font-size: 1.3rem;
            }
            .course-section {
                margin-top: 1.2rem;
            }
            .section-list li {
                font-size: 0.98rem;
                padding: 8px 10px;
            }
        }
    </style>
{% endblock %}
