{% extends 'base.html.twig' %}

{% block title %}Attachment{% endblock %}

{% block body %}
    <h1>Attachment</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ attachment.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ attachment.name }}</td>
        </tr>
        <tr>
            <th>URL</th>
            <td><a href="{{ attachment.url }}" target="_blank">{{ attachment.url }}</a></td>
        </tr>
        <tr>
            <th>Course</th>
            <td>{{ attachment.course ? attachment.course.title : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_attachment_index') }}">back to list</a>
    <a href="{{ path('admin_attachment_edit', {'id': attachment.id}) }}">edit</a>

    {{ include('attachment/_delete_form.html.twig') }}
{% endblock %}
