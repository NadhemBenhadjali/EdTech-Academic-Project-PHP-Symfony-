<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700;800&display=swap');
:root {
    --details-bg-color: #111827;
    --details-gradient-start: #4f46e5;
    --details-gradient-end: #ec4899;
    --glass-bg: linear-gradient(145deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.01) 100%);
    --glass-border: rgba(255, 255, 255, 0.15);
    --text-light: #e5e7eb;
    --text-muted: #9ca3af;
    --accent-gradient: linear-gradient(90deg, var(--details-gradient-start) 0%, var(--details-gradient-end) 100%);
    --shadow-color: rgba(0, 0, 0, 0.5);
    --transition-curve: cubic-bezier(0.25, 0.8, 0.25, 1);
}
.details-page-wrapper {
    font-family: 'Inter', sans-serif;
    background-color: var(--details-bg-color);
    color: var(--text-light);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 1rem;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
}
.details-page-wrapper::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 800px;
    height: 800px;
    background-image: radial-gradient(circle, var(--details-gradient-start) 0%, transparent 50%),
                      radial-gradient(circle, var(--details-gradient-end) 0%, transparent 50%);
    background-position: -200px -200px, 200px 200px;
    background-repeat: no-repeat;
    transform: translate(-50%, -50%);
    filter: blur(150px) saturate(1.5);
    opacity: 0.3;
    animation: background-pan 20s linear infinite;
}
@keyframes background-pan {
    0% { background-position: -200px -200px, 200px 200px; }
    25% { background-position: 200px -200px, -200px 200px; }
    50% { background-position: 200px 200px, -200px -200px; }
    75% { background-position: -200px 200px, 200px -200px; }
    100% { background-position: -200px -200px, 200px 200px; }
}
.details-container.course-details-glass {
    width: 100%;
    max-width: 600px;
    margin: 2rem auto;
    background: var(--glass-bg);
    backdrop-filter: blur(30px) saturate(180%);
    border: 1px solid var(--glass-border);
    border-radius: 24px;
    padding: 2.5rem 2rem 2rem 2rem;
    box-shadow: 0 32px 80px var(--shadow-color);
    animation: details-entry 0.8s var(--transition-curve) backwards;
    position: relative;
    z-index: 1;
}
@keyframes details-entry {
    from { opacity: 0; transform: translateY(40px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
}
.details-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 2rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 2rem;
    background: linear-gradient(90deg, #d1d5db 0%, #f9fafb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
}
.form-section {
    margin-bottom: 2.2rem;
}

/* form controls styling to match the glass aesthetic */
.main-form .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-muted);
    font-weight: 600;
    font-size: 0.95rem;
}

.main-form input[type="text"],
.main-form input[type="url"],
.main-form input[type="email"],
.main-form input[type="password"],
.main-form textarea,
.main-form select {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    border: 1px solid rgba(255,255,255,0.06);
    background: rgba(255,255,255,0.02);
    color: var(--text-light);
    font-size: 0.96rem;
    outline: none;
    transition: box-shadow 0.18s var(--transition-curve), transform 0.12s var(--transition-curve);
}

.main-form textarea { min-height: 120px; }

.main-form input:focus,
.main-form textarea:focus,
.main-form select:focus {
    box-shadow: 0 8px 30px rgba(79,70,229,0.08);
    border-color: var(--details-gradient-start);
    transform: translateY(-2px);
}

.form-error {
    color: #fecaca;
    font-size: 0.9rem;
    margin-top: 0.4rem;
}

.btn-delete {
    width: 100%;
    padding: 0.85rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s var(--transition-curve);
    box-shadow: 0 8px 20px rgba(239, 68, 68, 0.18);
    border: none;
    background: linear-gradient(90deg, #ef4444 0%, #f59e42 100%);
    color: #fff;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}
.btn-delete:hover {
    background: linear-gradient(90deg, #f87171 0%, #fbbf24 100%);
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(239, 68, 68, 0.18);
}
/* primary submit button (aligned with provided design) */
.btn-submit {
    width: 100%;
    padding: 0.85rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s var(--transition-curve);
    box-shadow: 0 10px 30px rgba(79, 70, 229, 0.12);
    border: none;
    background: var(--accent-gradient);
    color: #fff;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}
.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 40px rgba(79, 70, 229, 0.12);
}
.back-link {
    display: block;
    text-align: center;
    color: #a5b4fc;
    font-weight: 700;
    text-decoration: none;
    margin-top: 1.5rem;
    transition: color 0.2s;
}
.back-link:hover {
    color: #ec4899;
    text-decoration: underline;
}
@media (max-width: 700px) {
    .details-container.course-details-glass {
        padding: 1.2rem 0.5rem 1.2rem 0.5rem;
    }
    .details-title {
        font-size: 1.3rem;
    }
}
</style>

<div class="details-page-wrapper">
    <div class="details-container course-details-glass">
        <h2 class="details-title">{{ title|default('Ajouter une ressource') }}</h2>

        {{ form_start(form, {'attr': {'class': 'main-form'}}) }}

        <div class="form-section">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
        </div>

        <div class="form-section">
            <div class="form-group">
                {{ form_label(form.url) }}
                {{ form_widget(form.url) }}
            </div>
        </div>

        <div style="display: none;">
            {{ form_widget(form.course) }}
        </div>

        <button type="submit" class="btn-submit">{{ button_label|default('Enregistrer') }}</button>

        {{ form_end(form) }}

        {% if back_path is defined %}
            <a href="{{ back_path }}" class="back-link">{{ back_label|default('Retour') }}</a>
        {% endif %}


</div>
