{% extends 'base.html.twig' %}

{% block title %}Nouveau Quiz{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="details-page-wrapper">
        <div class="details-container">
            <h1 class="details-title">Nouveau Quiz</h1>

            {{ include('quiz/_form.html.twig') }}

            {# Utilise la route admin_course_show si la variable `course` est fournie par le contrôleur #}
            {% if course is defined %}
                <a href="{{ path('admin_course_show', {'id': course.id}) }}" class="btn-back"><span class="btn-back-icon">←</span> Retour au cours</a>
            {% else %}
                <a href="{{ path('admin_quiz_index') }}" class="btn-back"><span class="btn-back-icon">←</span> Retour aux quizzes</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
