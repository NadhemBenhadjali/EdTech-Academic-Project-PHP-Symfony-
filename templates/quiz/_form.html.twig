{{ form_start(form, {'attr': {'class': 'main-form'}}) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>
    <div class="form-group">
        {{ form_label(form.url) }}
        {{ form_widget(form.url) }}
        {{ form_errors(form.url) }}
    </div>

    {# render remaining fields (CSRF token etc.) #}
    {{ form_rest(form) }}

    <button type="submit" class="btn-submit">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
