{% extends 'base.html.twig' %}

{% block title %}New Attachment{% endblock %}

{% block body %}

<style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700;800&display=swap');

        :root {
            --details-bg-color: #111827;
            --details-gradient-start: #4f46e5;
            --details-gradient-end: #ec4899;
            --glass-bg: linear-gradient(145deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
            --glass-border: rgba(255, 255, 255, 0.15);
            --text-light: #e5e7eb;
            --text-muted: #9ca3af;
            --accent-gradient: linear-gradient(90deg, var(--details-gradient-start) 0%, var(--details-gradient-end) 100%);
            --shadow-color: rgba(0, 0, 0, 0.5);
            --transition-curve: cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .details-page-wrapper {
            font-family: 'Inter', sans-serif;
            background-color: var(--details-bg-color);
            color: var(--text-light);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem 1rem;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .details-page-wrapper::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 800px;
            height: 800px;
            background-image: radial-gradient(circle, var(--details-gradient-start) 0%, transparent 50%),
                              radial-gradient(circle, var(--details-gradient-end) 0%, transparent 50%);
            background-position: -200px -200px, 200px 200px;
            background-repeat: no-repeat;
            transform: translate(-50%, -50%);
            filter: blur(150px) saturate(1.5);
            opacity: 0.3;
            animation: background-pan 20s linear infinite;
        }

        @keyframes background-pan {
            0% { background-position: -200px -200px, 200px 200px; }
            25% { background-position: 200px -200px, -200px 200px; }
            50% { background-position: 200px 200px, -200px -200px; }
            75% { background-position: -200px 200px, 200px -200px; }
            100% { background-position: -200px -200px, 200px 200px; }
        }

        .details-container {
            width: 100%;
            max-width: 700px;
            margin: 2rem;
            background: var(--glass-bg);
            backdrop-filter: blur(30px) saturate(180%);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 2.5rem;
            box-shadow: 0 32px 80px var(--shadow-color);
            animation: details-entry 0.8s var(--transition-curve) backwards;
            position: relative;
            z-index: 1;
        }

        @keyframes details-entry {
            from { opacity: 0; transform: translateY(40px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .details-title {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 2.5rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 2.5rem;
            background: linear-gradient(90deg, #d1d5db 0%, #f9fafb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .main-form .form-group, .form-group {
            margin-bottom: 1.5rem;
        }

        .main-form label {
            display: block;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .main-form input, .main-form textarea {
            width: 100%;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            padding: 0.85rem 1rem;
            color: var(--text-light);
            font-size: 1rem;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
        .main-form textarea { min-height: 120px; }

        /* Styled select to match inputs */
        .main-form select, select {
            width: 100%;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            padding: 0.85rem 1rem;
            padding-right: 2.5rem; /* make room for custom arrow */
            color: var(--text-light);
            font-size: 1rem;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background-image: linear-gradient(45deg, transparent 50%, var(--text-light) 50%),
                              linear-gradient(135deg, var(--text-light) 50%, transparent 50%);
            background-position: calc(100% - 1rem) center, calc(100% - 0.6rem) center;
            background-size: 8px 8px, 8px 8px;
            background-repeat: no-repeat;
        }

        .main-form select:focus, select:focus {
            outline: none;
            border-color: var(--details-gradient-start);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.25);
        }

        .main-form select option, select option {
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            color: var(--text-light);
        }

        .main-form input:focus, .main-form textarea:focus {
            outline: none;
            border-color: var(--details-gradient-start);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.4);
        }

        .btn-submit {
            width: 100%;
            padding: 0.85rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            border: none;
            background: var(--accent-gradient);
            background-size: 200% 100%;
            color: var(--text-light);
            margin-top: 1rem;
        }

        .btn-submit:hover {
            background-position: right center;
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(79, 70, 229, 0.4);
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 2rem;
            color: var(--text-muted);
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: var(--text-light);
        }

        /* Specific styles for the styled select */
        .styled-select {
            width: 100%;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            padding: 0.85rem 1rem;
            padding-right: 2.5rem; /* make room for custom arrow */
            color: var(--text-light);
            font-size: 1rem;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            background-image: linear-gradient(45deg, transparent 50%, var(--text-light) 50%),
                              linear-gradient(135deg, var(--text-light) 50%, transparent 50%);
            background-position: calc(100% - 1rem) center, calc(100% - 0.6rem) center;
            background-size: 8px 8px, 8px 8px;
            background-repeat: no-repeat;
        }

        .styled-select:focus {
            outline: none;
            border-color: var(--details-gradient-start);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.25);
        }

        .styled-select option {
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            color: var(--text-light);
        }
    </style>

<div class="details-page-wrapper">
    <div class="details-container course-details-glass">

        <h2 class="details-title">Create new attachment for "{{ course.title }}"</h2>

        {{ form_start(form, {'attr': {'class': 'main-form'}}) }}

            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'placeholder': 'Attachment name'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.url) }}
                {{ form_widget(form.url, {'attr': {'placeholder': 'https://example.com/file.pdf'}}) }}
                {{ form_errors(form.url) }}
            </div>

            <div class="form-group">
                {{ form_label(form.course) }}
                {{ form_widget(form.course, {'attr': {'class': 'styled-select', 'id': 'attachment_course'}}) }}
                {{ form_errors(form.course) }}
            </div>

            <button type="submit" class="btn-submit">Save</button>

        {{ form_end(form) }}

        <a href="{{ path('teacher_course_show', {'id': course.id}) }}" class="back-link">back to course</a>

    </div>
</div>

{% endblock %}
