{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ quiz.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ quiz.title }}</td>
        </tr>
        <tr>
            <th>Course</th>
            <td>{{ quiz.course ? quiz.course.title : '' }}</td>
        </tr>
        <tr>
            <th>External quiz URL</th>
            <td>
                {% if quiz.url %}
                    <a href="{{ quiz.url }}" target="_blank">{{ quiz.url }}</a>
                {% else %}
                    (no URL set)
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    {% if quiz.course %}
        <a href="{{ path('admin_course_show', {'id': quiz.course.id}) }}">back to course</a>
    {% endif %}

    <a href="{{ path('admin_quiz_edit', {'id': quiz.id}) }}">edit</a>

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
