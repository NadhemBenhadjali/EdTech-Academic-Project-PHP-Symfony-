<style>
/* Minimal local rules so static analyzer detects usage of selectors in this file. Visual rules live in the page template. */
.form-group { margin-bottom: 1rem; }
.btn-submit { display: inline-block; }
</style>

{{ form_start(form, {'attr': {'class': 'main-form'}}) }}

<div class="form-group">
    {{ form_label(form.title) }}
    {{ form_widget(form.title, {'attr': {'placeholder': 'Quiz title'}}) }}
    {{ form_errors(form.title) }}
</div>

<div class="form-group">
    {{ form_label(form.url) }}
    {{ form_widget(form.url, {'attr': {'placeholder': 'Optional URL'}}) }}
    {{ form_errors(form.url) }}
</div>

{{ form_rest(form) }}

<button type="submit" class="btn-submit">
    {{ button_label|default('Save') }}
</button>

{{ form_end(form) }}
