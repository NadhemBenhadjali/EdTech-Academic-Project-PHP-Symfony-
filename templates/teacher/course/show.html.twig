<script>
document.addEventListener('DOMContentLoaded', function () {
    const input = document.getElementById('student-search');
    if (!input) return;

    const rows = Array.from(document.querySelectorAll('.student-row'));
    const countEl = document.querySelector('.students-count');
    const emptyFilterRow = document.getElementById('students-empty-filter');
    const selectAll = document.getElementById('select-all');
    const exportBtn = document.getElementById('export-visible');
    const headers = Array.from(document.querySelectorAll('.students-table th[data-sort]'));

    function normalize(s) {
        return (s || '').toString().toLowerCase();
    }

    function updateCount(visible) {
        if (!countEl) return;
        countEl.textContent = visible + ' enrolled';
    }

    function filter(q) {
        const query = normalize(q).trim();
        let visibleCount = 0;

        rows.forEach(row => {
            const name = normalize(row.dataset.name);
            const email = normalize(row.dataset.email);
            const match = !query || name.includes(query) || email.includes(query);
            row.style.display = match ? '' : 'none';
            if (match) visibleCount++;
        });

        // show/hide the "no match" row
        if (emptyFilterRow) {
            emptyFilterRow.style.display = visibleCount === 0 ? '' : 'none';
        }

        updateCount(visibleCount);
    }

    // selection handlers
    function updateSelectAllCheckbox() {
        const selects = Array.from(document.querySelectorAll('.student-select'));
        if (selects.length === 0) return;
        const allChecked = selects.every(s => s.checked);
        const anyChecked = selects.some(s => s.checked);
        selectAll.checked = allChecked;
        selectAll.indeterminate = !allChecked && anyChecked;
    }

    if (selectAll) {
        selectAll.addEventListener('change', function () {
            const checked = !!selectAll.checked;
            document.querySelectorAll('.student-select').forEach(cb => cb.checked = checked);
        });
    }

    document.addEventListener('change', function (e) {
        if (e.target && e.target.classList && e.target.classList.contains('student-select')) {
            updateSelectAllCheckbox();
        }
    });

    // Export CSV (selected if any, otherwise visible)
    function exportToCSV() {
        const selected = Array.from(document.querySelectorAll('.student-select')).filter(cb => cb.checked).map(cb => cb.closest('.student-row'));
        const visibleRows = Array.from(document.querySelectorAll('.student-row')).filter(r => r.style.display !== 'none');
        const rowsToExport = selected.length ? selected : visibleRows;
        const lines = [['Name', 'Email', 'Enrolled at']];
        rowsToExport.forEach(r => {
            const name = r.querySelector('.student-name') ? r.querySelector('.student-name').textContent.trim() : '';
            const email = r.querySelector('.col-email a') ? r.querySelector('.col-email a').textContent.trim() : '';
            const date = r.querySelector('.col-date') ? r.querySelector('.col-date').textContent.trim() : '';
            lines.push([name, email, date]);
        });
        const csvContent = lines.map(e => e.map(v => '"' + (v || '').replace(/"/g, '""') + '"').join(',')).join('\n');
        const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = '{{ course.title|replace({' ':'_'}) }}-students.csv';
        document.body.appendChild(a);
        a.click();
        a.remove();
        URL.revokeObjectURL(url);
    }

    if (exportBtn) exportBtn.addEventListener('click', exportToCSV);

    // Sorting
    function sortRowsBy(key, asc = true) {
        const tbodyEl = document.querySelector('.students-table tbody');
        const trs = Array.from(tbodyEl.querySelectorAll('tr.student-row'));
        trs.sort((a,b) => {
            const va = normalize(a.dataset[key] || '');
            const vb = normalize(b.dataset[key] || '');
            if (va < vb) return asc ? -1 : 1;
            if (va > vb) return asc ? 1 : -1;
            return 0;
        });
        trs.forEach(tr => tbodyEl.appendChild(tr));
    }

    headers.forEach(h => {
        let asc = true;
        h.style.cursor = 'pointer';
        h.addEventListener('click', function () {
            const key = h.dataset.sort;
            headers.forEach(x => x.classList.remove('sort-asc','sort-desc'));
            sortRowsBy(key, asc);
            h.classList.add(asc ? 'sort-asc' : 'sort-desc');
            asc = !asc;
        });
    });

    input.addEventListener('input', function (e) {
        filter(e.target.value);
    });
});
</script>

