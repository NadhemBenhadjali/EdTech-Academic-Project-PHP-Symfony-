{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
<div class="details-page-wrapper">
    <div class="details-container course-details-glass">
        <div style="display:grid; grid-template-columns:auto 1fr auto; align-items:center; gap:1rem;">
            <div style="display:flex; align-items:center;">
                {{ include('_partials/back_button.html.twig', { parent_route: 'teacher_course_index', fallback_route: 'teacher_course_index', label: 'Retour' }) }}
            </div>
            <div style="text-align:center;">
                <h1 class="details-title">{{ course.title }}</h1>
            </div>
            <div><!-- placeholder for right side to keep center alignment --></div>
        </div>
        <div class="course-meta">
            <span class="course-category">{{ course.category ? course.category.name : 'Uncategorized' }}</span>
            <span class="price-badge">{{ course.price|number_format(2, '.', ' ') }} €</span>
        </div>
        <p class="course-description">{{ course.description }}</p>

        <div class="course-section">
            <h2>Attachments</h2>
            <ul class="section-list">
                {% for attachment in course.attachments %}
                    <li>
                        <a href="{{ attachment.url }}" target="_blank" class="attachment-link">
                            {{ attachment.name ?: attachment.url }}
                        </a>
                        <a href="{{ path('teacher_attachment_edit', {'id': attachment.id}) }}" class="btn-action">Edit</a>
                        <form method="post"
                              action="{{ path('teacher_attachment_delete', {'id': attachment.id}) }}"
                              style="display:inline"
                              onsubmit="return confirm('Delete this attachment?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attachment.id) }}">
                            <button class="btn-action btn-delete" type="submit">Delete</button>
                        </form>
                    </li>
                {% else %}
                    <li class="empty">No attachments yet.</li>
                {% endfor %}
            </ul>
            <a href="{{ path('teacher_attachment_new_for_course', {'id': course.id}) }}" class="btn-create">+ Add attachment</a>
        </div>

        <div class="course-section">
            <h2>Quizzes</h2>
            <ul class="section-list">
                {% for quiz in course.quizzes %}
                    <li>
                        {{ quiz.title }}
                        {% if quiz.url %}
                            – <a href="{{ quiz.url }}" target="_blank" class="btn-quiz">Open quiz</a>
                        {% else %}
                            – <span class="quiz-unavailable">(no URL set)</span>
                        {% endif %}
                        <a href="{{ path('teacher_quiz_edit', {'id': quiz.id}) }}" class="btn-action">Edit</a>
                        <form method="post"
                              action="{{ path('teacher_quiz_delete', {'id': quiz.id}) }}"
                              style="display:inline"
                              onsubmit="return confirm('Delete this quiz?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                            <button class="btn-action btn-delete" type="submit">Delete</button>
                        </form>
                    </li>
                {% else %}
                    <li class="empty">No quizzes yet.</li>
                {% endfor %}
            </ul>
            <a href="{{ path('teacher_quiz_new_for_course', {'id': course.id}) }}" class="btn-create">+ Add quiz</a>
        </div>

        <div class="course-section">
            <h2>Enrolled students</h2>
            <div class="students-controls">
                <div class="students-left">
                    <label class="select-all-wrap">
                        <input type="checkbox" id="select-all">
                        <span>Select all</span>
                    </label>
                    <div class="students-count">{{ purchases|length }} enrolled</div>
                </div>
                <div class="students-right">
                    <div class="students-search">
                        <input type="search" id="student-search" placeholder="Search students..." aria-label="Search students">
                    </div>
                    <button id="export-visible" class="btn-action small">Export visible</button>
                </div>
            </div>

            <div class="students-table-wrapper">
                <table class="students-table">
                    <thead>
                        <tr>
                            <th class="col-select"></th>
                            <th class="col-student" data-sort="name">Student <span class="sort-indicator" aria-hidden="true"></span></th>
                            <th class="col-email" data-sort="email">Email <span class="sort-indicator" aria-hidden="true"></span></th>
                            <th class="col-date">Enrolled at</th>
                            <th class="col-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for purchase in purchases %}
                        {% set cb_id = 'select-' ~ loop.index0 %}
                        <tr class="student-row" data-name="{{ purchase.user.name|e }}" data-email="{{ purchase.user.email|e }}">
                            <td class="col-select">
                                <input type="checkbox" id="{{ cb_id }}" class="student-select" aria-labelledby="label-{{ cb_id }}">
                                <label id="label-{{ cb_id }}" class="sr-only" for="{{ cb_id }}">Select {{ purchase.user.name }}</label>
                            </td>
                            <td class="col-student">
                                <div class="student-item">
                                    <div class="student-avatar" aria-hidden="true">
                                        {# build initials from name (safe access) #}
                                        {% set parts = purchase.user.name ? purchase.user.name|split(' ') : ['?'] %}
                                        {% set initials = (parts[0]|default('')|slice(0,1)|upper) ~ (parts|length > 1 ? (parts[1]|default('')|slice(0,1)|upper) : '') %}
                                        {{ initials }}
                                    </div>
                                    <div class="student-info">
                                        <div class="student-name">{{ purchase.user.name }}</div>
                                        <div class="student-sub">{{ purchase.user.email }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="col-email"><a href="mailto:{{ purchase.user.email }}">{{ purchase.user.email }}</a></td>
                            <td class="col-date">{{ purchase.date ? purchase.date|date('Y-m-d H:i') : '' }}</td>
                            <td class="col-actions">
                                <a href="mailto:{{ purchase.user.email }}" class="btn-action small">Message</a>
                                {# optional: remove/unenroll form could go here #}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="empty">No students enrolled yet.</td>
                        </tr>
                    {% endfor %}
                    {# row shown when filtering yields no results #}
                    <tr id="students-empty-filter" style="display:none">
                        <td colspan="5" class="empty">No matching students.</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="course-actions">
            <a href="{{ path('teacher_course_edit', {'id': course.id}) }}" class="btn-action">Edit course</a>
            {# back-link replaced by shared back_button partial above #}
        </div>
    </div>
</div>

{# Hidden helper elements so static analyzer recognizes dynamic classes (no visual impact) #}
<div style="position:absolute; left:-9999px; width:1px; height:1px; overflow:hidden;" aria-hidden="true">
