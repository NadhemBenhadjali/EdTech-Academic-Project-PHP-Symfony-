{% extends 'base.html.twig' %}

{% block title %}Liste des Cours{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700;800&display=swap');

        :root {
            --list-bg-color: #111827;
            --list-gradient-start: #4f46e5;
            --list-gradient-end: #ec4899;
            --glass-bg: linear-gradient(145deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
            --glass-border: rgba(255, 255, 255, 0.15);
            --text-light: #e5e7eb;
            --text-muted: #9ca3af;
            --accent-gradient: linear-gradient(90deg, var(--list-gradient-start) 0%, var(--list-gradient-end) 100%);
            --shadow-color: rgba(0, 0, 0, 0.5);
            --transition-curve: cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .list-page-wrapper {
            font-family: 'Inter', sans-serif;
            background-color: var(--list-bg-color);
            color: var(--text-light);
            padding: 4rem 1rem;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .list-page-wrapper::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: radial-gradient(circle, var(--list-gradient-start), transparent 40%),
                              radial-gradient(circle, var(--list-gradient-end), transparent 40%);
            background-repeat: no-repeat;
            filter: blur(150px) saturate(1.5);
            opacity: 0.3;
            animation: background-pan 20s linear infinite;
            z-index: 0;
        }

        @keyframes background-pan {
            0% { background-position: -200px -200px, 200px 200px; }
            25% { background-position: 200px -200px, -200px 200px; }
            50% { background-position: 200px 200px, -200px -200px; }
            75% { background-position: -200px 200px, 200px -200px; }
            100% { background-position: -200px -200px, 200px 200px; }
        }

        .list-container {
            width: 100%;
            max-width: 900px;
            margin: 2rem auto;
            background: var(--glass-bg);
            backdrop-filter: blur(30px) saturate(180%);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            box-shadow: 0 32px 80px var(--shadow-color);
            animation: list-entry 0.8s var(--transition-curve) backwards;
            position: relative;
            z-index: 1;
            overflow: hidden;
        }

        @keyframes list-entry {
            from { opacity: 0; transform: translateY(40px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .list-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--glass-border);
        }

        /* Back link: subtle text-button (no box) */
        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--text-muted);
            font-weight: 700;
            background: transparent; /* no box */
            border: none;
            padding: 0;
            cursor: pointer;
            text-decoration: none;
            opacity: 0.95;
            transition: color 160ms var(--transition-curve), transform 160ms var(--transition-curve);
            font-size: 0.98rem;
        }
        .btn-back:hover { color: var(--text-light); }
        .btn-back:focus-visible { outline: 3px solid rgba(79,70,229,0.18); outline-offset: 3px; border-radius: 6px; }

        .btn-back-icon { display:inline-block; font-size:16px; line-height:1; transform: translateX(0); transition: transform 160ms var(--transition-curve); }
        .btn-back:hover .btn-back-icon { transform: translateX(-3px); }

        .list-title {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 2.2rem;
            font-weight: 800;
            background: linear-gradient(90deg, #d1d5db 0%, #f9fafb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .list-body {
            padding: 0;
            margin: 0;
        }

        .list-item {
            display: grid;
            grid-template-columns: 1fr 100px 150px 120px;
            align-items: center;
            gap: 1rem;
            padding: 1.25rem 2rem;
            border-bottom: 1px solid var(--glass-border);
            transition: background-color 0.3s ease;
        }
        .list-item:last-child {
            border-bottom: none;
        }
        .list-item:hover {
            background-color: rgba(255, 255, 255, 0.03);
        }

        .item-title { font-weight: 600; color: var(--text-light); }
        .item-price { color: var(--text-muted); }
        .item-category { color: var(--text-muted); }
        .item-actions { display: flex; gap: 0.75rem; justify-content: flex-end; }

        .no-records {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

        .btn-action {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.3s var(--transition-curve);
        }

        .btn-primary {
            background: var(--accent-gradient);
            background-size: 200% 100%;
            color: var(--text-light);
            border: none;
        }
        .btn-primary:hover {
            background-position: right center;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-muted);
            border: 1px solid var(--glass-border);
        }
        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text-light);
        }
    </style>
{% endblock %}

{% block body %}
<div class="list-page-wrapper">
    <div class="list-container">
        <div class="list-header">
            <div style="display:flex; align-items:center; gap:1rem;">
                {{ include('_partials/back_button.html.twig', { fallback_route: 'admin_course_index', label: 'Retour' }) }}
                <h1 class="list-title">Liste des Cours</h1>
            </div>
            <a href="{{ path('admin_course_new') }}" class="btn-action btn-primary">Créer un cours</a>
        </div>

        <div class="list-body">
            {% if courses is not empty %}
                {% for course in courses %}
                    <div class="list-item">
                        <span class="item-title">{{ course.title }}</span>
                        <span class="item-price">{{ course.price }} €</span>
                        <span class="item-category">{{ course.category ? course.category.name : 'N/A' }}</span>
                        <div class="item-actions">
                            <a href="{{ path('admin_course_show', {'id': course.id}) }}" class="btn-action btn-secondary">Voir</a>
                            <a href="{{ path('admin_course_edit', {'id': course.id}) }}" class="btn-action btn-secondary">Modifier</a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="no-records">
                    <p>Aucun cours trouvé.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
