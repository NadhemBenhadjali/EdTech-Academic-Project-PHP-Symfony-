{% extends 'base.html.twig' %}

{% block title %}Modifier le Cours{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700;800&display=swap');

        :root {
            --details-bg-color: #111827;
            --details-gradient-start: #4f46e5;
            --details-gradient-end: #ec4899;
            --glass-bg: linear-gradient(145deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
            --glass-border: rgba(255, 255, 255, 0.15);
            --text-light: #e5e7eb;
            --text-muted: #9ca3af;
            --accent-gradient: linear-gradient(90deg, var(--details-gradient-start) 0%, var(--details-gradient-end) 100%);
            --shadow-color: rgba(0, 0, 0, 0.5);
            --transition-curve: cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .details-page-wrapper {
            font-family: 'Inter', sans-serif;
            background-color: var(--details-bg-color);
            color: var(--text-light);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 4rem 1rem;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .details-page-wrapper::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 800px;
            height: 800px;
            background-image: radial-gradient(circle, var(--details-gradient-start) 0%, transparent 50%),
                              radial-gradient(circle, var(--details-gradient-end) 0%, transparent 50%);
            background-position: -200px -200px, 200px 200px;
            background-repeat: no-repeat;
            transform: translate(-50%, -50%);
            filter: blur(150px) saturate(1.5);
            opacity: 0.3;
            animation: background-pan 20s linear infinite;
        }

        @keyframes background-pan {
            0% { background-position: -200px -200px, 200px 200px; }
            25% { background-position: 200px -200px, -200px 200px; }
            50% { background-position: 200px 200px, -200px -200px; }
            75% { background-position: -200px 200px, 200px -200px; }
            100% { background-position: -200px -200px, 200px 200px; }
        }

        .details-container {
            width: 100%;
            max-width: 700px;
            margin: 2rem;
            background: var(--glass-bg);
            backdrop-filter: blur(30px) saturate(180%);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 2.5rem;
            box-shadow: 0 32px 80px var(--shadow-color);
            animation: details-entry 0.8s var(--transition-curve) backwards;
            position: relative;
            z-index: 1;
        }

        @keyframes details-entry {
            from { opacity: 0; transform: translateY(40px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .details-title {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 2.5rem;
            font-weight: 800;
            text-align: center;
            margin-bottom: 2.5rem;
            background: linear-gradient(90deg, #d1d5db 0%, #f9fafb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .main-form .form-group {
            margin-bottom: 1.5rem;
        }

        .main-form label {
            display: block;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .main-form input, .main-form textarea, .main-form select {
            width: 100%;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            padding: 0.85rem 1rem;
            color: var(--text-light);
            font-size: 1rem;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
        .main-form textarea { min-height: 120px; }

        .main-form input:focus, .main-form textarea:focus, .main-form select:focus {
            outline: none;
            border-color: var(--details-gradient-start);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.4);
        }

        .btn-submit {
            width: 100%;
            padding: 0.85rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            border: none;
            background: var(--accent-gradient);
            background-size: 200% 100%;
            color: var(--text-light);
            margin-top: 1rem;
        }

        .btn-submit:hover {
            background-position: right center;
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(79, 70, 229, 0.4);
        }

        .actions-footer {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid var(--glass-border);
            padding-top: 2rem;
            margin-top: 2rem;
        }

        .btn-action {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            border: none;
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-muted);
            border: 1px solid var(--glass-border);
        }
        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--text-light);
        }

        .btn-danger {
            background: linear-gradient(90deg, #ef4444, #dc2626);
            color: var(--text-light);
        }
        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(239, 68, 68, 0.3);
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s var(--transition-curve);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            border: none;
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-light);
        }
        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .btn-back-icon {
            display: inline-block;
            margin-right: 0.5rem;
            font-size: 1.2rem;
            line-height: 1;
        }
    </style>
{% endblock %}

{% block body %}
<div class="details-page-wrapper">
    <div class="details-container">
        <div style="display:flex; align-items:center; gap:1rem; margin-bottom:1rem;">
            <a href="{{ path('admin_course_index') }}" onclick="if (document.referrer && document.referrer !== location.href) { history.back(); return false; }" class="btn-back" aria-label="Retour">
                <span class="btn-back-icon" aria-hidden="true">←</span>
                <span>Retour</span>
            </a>
            <h1 class="details-title">Modifier le Cours</h1>
        </div>

        {{ include('course/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div class="actions-footer">
            {{ include('course/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
